# Environment variables for FriendAligner (example)
# Copy this file to .env and fill in real values

# Flask
FLASK_ENV=development
SECRET_KEY=change_this_secret
JWT_SECRET_KEY=change_this_jwt_secret

# Database (Local MySQL via PyMySQL)
# Format: mysql+pymysql://<user>:<password>@<host>:<port>/<database>
DATABASE_URI=mysql+pymysql://root:password@localhost:3306/FriendAligner

# CORS (optional comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Google Places API
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# Email (disable sending by default; app uses in-app notifications)
MAIL_ENABLED=false
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email_username
MAIL_PASSWORD=your_email_password
MAIL_DEFAULT_SENDER=noreply@example.com

# App URLs (used in links)
APP_BASE_URL=http://localhost:5000

